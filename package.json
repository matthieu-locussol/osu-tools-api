{
   "name": "osu-tools-api",
   "version": "1.1.2",
   "description": "An API using osu-tools to get stuff done.",
   "repository": "git@github.com:matthieu-locussol/osu-tools-api.git",
   "author": "Matthieu Locussol <dev.matthieu.locussol@gmail.com>",
   "license": "MIT",
   "scripts": {
      "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
      "build": "tsc",
      "start": "node build/src/main.js",
      "check:prettier": "prettier --list-different --config ./.prettierrc.json --ignore-path .gitignore --write \"**/*.{js,jsx,ts,tsx}\"",
      "check:eslint": "eslint --ignore-path .gitignore src/**/*",
      "check:typescript": "tsc --project ./tsconfig.json --noEmit",
      "tests": "jest",
      "tests:ci": "jest --ci",
      "release": "standard-version -a"
   },
   "lint-staged": {
      "*.{ts,tsx,d.ts}": [
         "tsc-files --noEmit",
         "yarn check:eslint"
      ]
   },
   "dependencies": {
      "dotenv": "^10.0.0",
      "express": "^4.17.1"
   },
   "devDependencies": {
      "@commitlint/cli": "^15.0.0",
      "@commitlint/config-conventional": "^15.0.0",
      "@types/express": "^4.17.13",
      "@types/jest": "^27.0.2",
      "@types/node": "^16.10.3",
      "@typescript-eslint/eslint-plugin": "^4.33.0",
      "@typescript-eslint/parser": "^4.33.0",
      "eslint": "^7.2.0",
      "eslint-config-airbnb-base": "^14.2.1",
      "eslint-config-airbnb-typescript": "^14.0.1",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-import": "^2.22.1",
      "husky": "^7.0.4",
      "jest": "^27.2.5",
      "lint-staged": "^12.1.3",
      "prettier": "^2.4.1",
      "pretty-quick": "^3.1.2",
      "standard-version": "^9.3.2",
      "ts-jest": "^27.0.5",
      "ts-node-dev": "^1.1.8",
      "tsc-files": "^1.1.3",
      "typescript": "^4.4.3"
   }
}
